/* pages/my/my.wxss */
.userinfo {
    display: flex;
    align-items: center;
  }
  
  .userinfo-avatar {
      overflow: hidden;
    margin-right: 10px; /* 调整头像与昵称之间的间距 */
    margin-left: 20px;
    width: 200rpx; /* 设置头像的宽度 */
   height: 200rpx; /* 设置头像的高度 */
   border-radius: 80%;
  }
  .userinfo-avatar open-data {
    border-radius: 20rpx; /* 将头像设置为圆形 */
    width: 100%;
    height: 100%;
  }

  .userinfo-details {
    display: flex;
    flex-direction: column;
  }
  
  .user-motto {
    margin-top: 10px; /* 调整座右铭与昵称之间的间距 */
  }
  
    .head-box{
        /* box位置设置 */
        position: fixed;
        left:15rpx;
        top: 0rpx;
        /* border: 2rpx solid red;  */
        /* 边框外围 */
        margin: 20rpx;
        /* 内边距 */
        padding: 20rpx;
        /* 长宽 */
        width: 640rpx;
        height: 190rpx;
        /* 圆角大小 */
        border-radius: 30rpx;
        /* 不透明度 */
        opacity: 0.99;
        background: #ffffffc0;
      } 
      
      